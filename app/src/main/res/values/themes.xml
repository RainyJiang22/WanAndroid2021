<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WanAndroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_accent</item>
        <item name="colorPrimaryVariant">@color/color_accent</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="bottom_tab_title_active">
        <item name="android:textSize">11sp</item>
    </style>

    <!--标签框通用样式-->
    <style name="ShapeTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dp_8</item>
        <item name="android:padding">@dimen/dp_4</item>
        <item name="android:textSize">@dimen/sp_10</item>
        <item name="shape_radius">@dimen/dp_2</item>
        <item name="shape_strokeWidth">@dimen/dp_0.5</item>
    </style>


    <!--ShapeAbleImageView 圆角-->
    <style name="RoundedStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>


    <!--弹出菜单主题-->
    <style name="PopupMenuStyle" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <!--使弹出菜单和标题栏不重叠-->
        <item name="overlapAnchor">false</item>
    </style>

    <!--自定义Toolbar标题-->
    <style name="KToolbarTitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/sp_18</item>
        <!--标题文本颜色，这里注释，为了适配夜间主题自动切换颜色-->
        <!--<item name="android:textColor">@android:color/black</item>-->
    </style>

    <style name="KToolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <!--导航按钮图标，这里注释，在代码中定义ActionBarDrawerToggle-->
        <!--<item name="navigationIcon">@drawable/ic_menu</item>-->
        <item name="titleTextAppearance">@style/KToolbarTitleAppearance</item>
    </style>

    <style name="CircleStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="TitleBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/color_floating_button</item>
        <item name="android:paddingTop">@dimen/dp_20</item>
        <item name="leftIcon">@drawable/ic_back</item>
        <item name="leftIconTint">@color/color_ic_bg_tint</item>
        <item name="rightIconTint">@color/color_ic_bg_tint</item>
        <item name="rightTitleColor">?android:attr/textColorPrimary</item>
        <item name="titleColor">?android:attr/textColorPrimary</item>
        <item name="titleSize">@dimen/sp_20</item>
        <item name="lineVisible">false</item>
    </style>

    <!--设置栏通用样式-->
    <style name="SettingBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="bar_leftTextSize">@dimen/sp_16</item>
        <item name="bar_leftTextColor">?android:attr/textColorPrimary</item>
        <item name="bar_leftDrawablePadding">@dimen/dp_20</item>
        <item name="bar_leftDrawableTint">@color/color_drawable_bg_tint</item>
        <item name="bar_rightTextColor">?android:attr/textColorSecondary</item>
        <item name="bar_rightDrawable">@drawable/ic_arrows_right</item>
        <item name="bar_rightDrawableTint">@color/color_ic_bg_tint</item>
        <item name="bar_lineVisible">false</item>
    </style>

    <!-- 默认按钮样式 -->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_circle_selector</item>
        <item name="android:foreground">@null</item>
    </style>


</resources>