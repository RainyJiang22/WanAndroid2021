<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WanAndroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_accent</item>
        <item name="colorPrimaryVariant">@color/color_accent</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="bottom_tab_title_active">
        <item name="android:textSize">11sp</item>
    </style>

    <!--标签框通用样式-->
    <style name="ShapeTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dp_8</item>
        <item name="android:padding">@dimen/dp_4</item>
        <item name="android:textSize">@dimen/sp_10</item>
        <item name="shape_radius">@dimen/dp_2</item>
        <item name="shape_strokeWidth">@dimen/dp_0.5</item>
    </style>


    <!--ShapeAbleImageView 圆角-->
    <style name="RoundedStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>


    <!--弹出菜单主题-->
    <style name="PopupMenuStyle" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <!--使弹出菜单和标题栏不重叠-->
        <item name="overlapAnchor">false</item>
    </style>

    <!--自定义Toolbar标题-->
    <style name="KToolbarTitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/sp_18</item>
        <!--标题文本颜色，这里注释，为了适配夜间主题自动切换颜色-->
        <!--<item name="android:textColor">@android:color/black</item>-->
    </style>
</resources>